<!-- include header-->
<%-include('partials/_header')%>
<!-- /include header-->


    <!--Main site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
               <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>All accounts</a>
               </div>
            </div>

            <div class="form-title text-center">
                <h2 class="text-dark">Update User</h2>
                <span class="text-light">Use the below form to update an account</span>
            </div>

            <!--add user form-->
                        <!--form handling-->
                        <form method="POST" id="update_user">
                            <div class="new_user">
                                
                                <!--getting an Name from user-->
                                <div class="form-group">
                                    <label for="name" class="text-light">Platform Name</label>
                                    <input type="hidden" name="id" value="<%=user._id%>">
                                    <input type="text" name="PlatformName" value="<%=user.PlatformName%>" placeholder="PlatformName">
                                </div>
            
                                <!--getting an Email from the user-->
                                <div class="form-group">
                                    <label for="Email" class="text-light">Email1 (Password Manager Email)</label>
                                    <input type="text" name="email1" value="<%=user.email1%>" placeholder="example@gmail.com">
                                </div>
            
                                <!--getting an Email from the user-->
                                <div class="form-group">
                                    <label for="Email" class="text-light">Email2 (Password Manager Email)</label>
                                    <input type="text" name="email2" value="<%=user.email2%>" placeholder="example@gmail.com">
                                </div>
                                
                                <div class="form-group">
                                    <label for="name" class="text-light">Password</label>
                                    <input type="text" name="Password" value="<%=user.Password%>" placeholder="Password">
                                </div>
            
                                <div class="form-group">
                                    <button type="submit" class="btn text-dark update">Save</button>
                                </div>
            
                            </div>
                        </form>
            
                        <!--/form handling-->
            <!--/add user form-->


        </div>
     </main>
<!--/Main site-->


